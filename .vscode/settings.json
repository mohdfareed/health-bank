{
  // swift
  "swift.disableSwiftPackageManagerIntegration": true,
  "[swift]": {
    "editor.defaultFormatter": "swiftlang.swift-vscode"
  },
  // debugging
  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  // json
  "[json]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2,
  },
  "[jsonc]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2,
  },
  // spelling
  "cSpell.ignorePaths": [
    ".git",
    ".github",
    ".vscode",
    ".gitignore",
  ],
  "cSpell.words": [
    "carb",
    "Datas",
    "preconcurrency",
    "subheadline",
    "subview",
    "subviews",
    "xcassets",
    "XCUI"
  ]
}
