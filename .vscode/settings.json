{
  // debugging
  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  // swift
  "sweetpad.xcodegen.autogenerate": true,
  "[swift]": {
    "editor.defaultFormatter": "swiftlang.swift-vscode",
    "editor.detectIndentation": false,
    "editor.indentSize": 4,
  },
  // json
  "[json]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2,
  },
  "[jsonc]": {
    "editor.detectIndentation": false,
    "editor.indentSize": 2,
  },
  // TODOs
  "commentAnchors.workspace.excludeFiles": "**/.build/**/*",
  // spelling
  "cSpell.ignorePaths": [
    ".build",
    ".github",
    ".vscode",
    ".gitignore",
    "build",
    "Package.resolved",
    "Project.yml",
  ],
  "cSpell.words": [
    "associatedtype",
    "checkmark",
    "faceid",
    "Macronutrients",
    "questionmark",
    "refreshable",
    "subheadline",
    "typealias",
    "xcodegen",
    "xcodeproj",
    "xmark"
  ],
}
