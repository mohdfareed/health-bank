    {
      "type": "sweetpad",
      "action": "clean",
      "problemMatcher": [
        "$sweetpad-watch",
        "$sweetpad-xcodebuild-default",
        "$sweetpad-xcbeautify-errors",
        "$sweetpad-xcbeautify-warnings"
      ],
      "label": "clean",
      "detail": "Clean the app"
    },
    {
      "type": "sweetpad",
      "action": "launch",
      "problemMatcher": [
        "$sweetpad-watch",
        "$sweetpad-xcodebuild-default",
        "$sweetpad-xcbeautify-errors",
        "$sweetpad-xcbeautify-warnings"
      ],
      "label": "launch",
      "detail": "Build and Launch the app"
    },
    {
      "type": "sweetpad",
      "action": "resolve-dependencies",
      "problemMatcher": [
        "$sweetpad-watch",
        "$sweetpad-xcodebuild-default",
        "$sweetpad-xcbeautify-errors",
        "$sweetpad-xcbeautify-warnings"
      ],
      "label": "resolve-dependencies",
      "detail": "Resolve dependencies"
